doctype html
html( lang='ru' )
	head
		meta( charset="utf-8" )
		meta( http-equiv="X-UA-Compatible" content="IE=edge" )
		meta( name="viewport" content="width=device-width, initial-scale=1" )
		meta( name="description" content="#{data.description}" )
		meta( name="author" content="Quve Development" )
		meta( property="og:title" content="#{data.cyrillicTitle}" )
		meta( property="og:type" content="article" )
		meta( property="og:url" content="http://mathlab.kz/news/#{data.title}" )
		meta( property="og:image" content="http://mathlab.kz#{data.photoUrl}" )
		meta( property="og:description" content="#{data.description}" )

		title #{data.cyrillicTitle} - MathLab.kz

		// Bootstrap Core CSS
		link( href="/css/bootstrap.css" rel="stylesheet" )

		//Custom CSS	
		link( rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" )
		link( rel="stylesheet" href="/css/font-awesome.min.css" )
		link( href="/css/animate.css" rel="stylesheet" )
		link( href="/css/default.css" rel="stylesheet" )

		//Scripts
		script( src="/js/jquery.min.js" )

		<!--[if IE]>
		link( rel="stylesheet" href="https://rawgit.com/codefucker/finalReject/master/reject/reject.css" media="all" )
		script( type="text/javascript" src="https://rawgit.com/codefucker/finalReject/master/reject/reject.min.js" )
		<![endif]-->
	body( class="landing" )

		// NAVBAR
		nav( class="navbar navbar-inverse navbar-fixed-top no-margin" )
			div( class="container-fluid" )
				div( class="navbar-header" )
					button( type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false" )
						span( class="sr-only" ) Меню
						span( class="icon-bar" )
						span( class="icon-bar" )
						span( class="icon-bar" )
					a( class="navbar-brand" href="/" )
						img( src="/images/logo.svg" alt="MathLab" title="MathLab - Logo" itemprop="logo" )
						span MathLab.kz
				div( class="collapse navbar-collapse" id="navbar-collapse" )
					ul( class="nav navbar-nav" )
						li
							a( href="/" ) Главная
						li
							a( href="/prices" ) Расценки и способы оплаты
						
					ul( class="nav navbar-nav navbar-right" )
						li
							a( href="/sign-in" )
								i( class="fa fa-lock" aria-hidden="true" ) 
								| &nbsp;Вход и регистрация

		// CONTENT
		div( class="container main-offset" )
			div( class="row" )
				div( class="col-xs-12" )
					ol( class="breadcrumb" )
						li
							a( href="/" ) Главная
						li
							a( href="/news" ) Новости
						li( class="active" )!= data.cyrillicTitle
			div( class="row" )
				article( class="col-md-8 col-lg-9" )
					h1( class="post-title")!= data.cyrillicTitle
					div( class="post-visualization" )
						div( class="post-img" style="background-image: url('#{data.photoUrl}')")
						!= marked(data.body)
					div( class="row" )
						div( class="col-sm-6" )
							h6 Поделитесь новостью с друзьями в соц.сетях и мессенджерах:
							div( id="share" )
						div( class="col-sm-6 text-right" )
							div( class="post-date" )!= moment(data.date).locale("ru").calendar()


				aside( class="col-md-4 col-lg-3" )
					h3 Вам также может быть это интересно
					div( class="another-news-block" )
						h4 iPhone X, день первый: мнения предпринимателей и покупателей
						p 3 ноября Apple запустила продажи iPhone X с «безрамочным» экраном и системой распознавания лица Face ID. Первые российские владельцы новых смартфонов рассказали
						a( href="#" ) Читать далее 
							i( aria-hidden="true" class="fa fa-angle-right" )
					div( class="another-news-block" )
						h4 iPhone X, день первый: мнения предпринимателей и покупателей
						p 3 ноября Apple запустила продажи iPhone X с «безрамочным» экраном и системой распознавания лица Face ID. Первые российские владельцы новых смартфонов рассказали
						a( href="#" ) Читать далее 
							i( aria-hidden="true" class="fa fa-angle-right" )
					div( class="another-news-block" )
						h4 iPhone X, день первый: мнения предпринимателей и покупателей
						p 3 ноября Apple запустила продажи iPhone X с «безрамочным» экраном и системой распознавания лица Face ID. Первые российские владельцы новых смартфонов рассказали
						a( href="#" ) Читать далее 
							i( aria-hidden="true" class="fa fa-angle-right" )
					
		// FOOTER
		include ./includes/footer-main

		script( src="/js/bootstrap.min.js" defer )
		span( itemprop="address" style="display: none;" ) Казахстан, Алматы
		script( type="text/javascript" src="https://cdn.jsdelivr.net/jquery.jssocials/1.4.0/jssocials.min.js" )
		link( type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.jssocials/1.4.0/jssocials.css" )
		link( type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.jssocials/1.4.0/jssocials-theme-minima.css" )
		script.
			$("#share").jsSocials({
				showCount: true,
				showLabel: true,
				shares: ["vkontakte", "facebook", "twitter", "whatsapp", "googleplus", "telegram"]
			});
